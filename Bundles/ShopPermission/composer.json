{
  "name": "spryker-shop/shop-permission",
  "description": "ShopPermission module",
  "license": "proprietary",
  "require": {
    "php": ">=7.1",
    "spryker/kernel": "^3.0.0"
  },
  "require-dev": {
    "spryker/code-sniffer": "*",
    "spryker/permission": "^0.0.1",
    "spryker/silex": "^2.0.0",
    "spryker/testify": "*",
    "spryker/twig": "^3.0.0"
  },
  "suggest": {
    "spryker/permission": "^0.0.1 Is you want to use permission module for ShopApplication",
    "spryker/twig": "^3.0.0 If you want to use the permission plugin for Twig",
    "spryker/silex": "^2.0.0 If you want to use the permission plugin for Twig"
  },
  "autoload": {
    "psr-4": {
      "SprykerShop\\": "src/SprykerShop/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
