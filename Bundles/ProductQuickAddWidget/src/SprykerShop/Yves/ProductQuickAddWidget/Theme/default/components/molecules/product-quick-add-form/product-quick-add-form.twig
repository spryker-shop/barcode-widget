{% extends model('component') %}

{% define config = {
    name: 'product-quick-add-form'
} %}

{% define data = {
    form: required,
    vertical: false
} %}

{% block body %}
    {% if data.title is not empty %}
        <h5 class="{{ config.name }}__title col col--sm-12 {{ data.vertical ? '' : 'col--md-2 ' ~ config.name ~ '__title--row' }}">
            {{data.title}}
        </h5>
    {% endif %}

    <div class="col col--sm-12 {{ data.vertical ? '' : 'col--md-10' }}">
        {{ form_start(data.form, data.options) }}
        <div class="grid">
            {% block fields %}
                {% set fieldsAlignment = data.vertical ? '' : "col--md-10" %}

                {% include molecule('product-quick-add-fields', 'ProductQuickAddWidget') with {
                    class: "grid col col--sm-12 " ~ fieldsAlignment,
                    data: {
                        form: data.form,
                        vertical: data.vertical
                    }
                } only %}
            {% endblock %}

            <div class="col col--sm-12 {{ data.vertical ? '' : 'col--md-2' }}">
                <button type="submit" class="button button--expand button--success">
                    {{ data.submitButtonTitle }}
                </button>
            </div>
        </div>
        {{ form_end(data.form) }}
    </div>
{% endblock %}
