{% extends template('page-layout-main') %}

{% define data = {
    activePage: 'overview'
} %}

{% block breadcrumbs %}
    {% include molecule('breadcrumb') with {
        data: {
            steps: [{
                label: 'customer.account' | trans
            }]
        }
    } only %}
{% endblock %}

{% block protected %}
    {{parent()}}
    {% block customerWishlistNavigation %}{% endblock %}
{% endblock %}

{% block content %}
    <div class="grid">
        <div class="col col--sm-12 col--md-3">
            {% block customerNavigation %}
                {% embed molecule('customer-navigation', 'CustomerPage') with {
                    class: 'box',
                    data: {
                        activePage: data.activePage
                    },
                    embed: {
                        wishlistNavigation: block('customerWishlistNavigation')
                    }
                } only %}
                    {% block wishlistNavigation %}
                        {{embed.wishlistNavigation | raw}}
                    {% endblock %}
                {% endembed %}
            {% endblock %}
        </div>

        <div class="col col--sm-12 col--md-9">
            {% block customerContent %}{% endblock %}
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}
