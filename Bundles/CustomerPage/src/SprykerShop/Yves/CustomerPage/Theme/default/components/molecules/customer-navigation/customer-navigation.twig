{% extends model('component') %}

{% define config = {
    name: 'customer-navigation',
    tag: 'nav'
} %}

{% define data = {
    activePage: required
} %}

{%- macro isActive(page, activePage) -%}
    {%- if page == activePage -%}menu__item--active{%- endif -%}
{%- endmacro -%}

{%- import _self as macros -%}

{% block body %}
    <ul class="menu">
        <li class="menu__item {{macros.isActive('overview', data.activePage)}}">
            <a href="{{ path('customer/overview') }}" data-id="sidebar-overview">{{ 'customer.account.overview' | trans }}</a>
        </li>
        <li class="menu__item {{macros.isActive('profile', data.activePage)}}">
            <a href="{{ path('customer/profile') }}" data-id="sidebar-profile">{{ 'customer.account.profile_data' | trans }}</a>
        </li>
        <li class="menu__item {{macros.isActive('address', data.activePage)}}">
            <a href="{{ path('customer/address') }}" data-id="sidebar-address">{{ 'customer.account.address' | trans }}</a>
        </li>
        <li class="menu__item {{macros.isActive('order', data.activePage)}}">
            <a href="{{ path('customer/order') }}" data-id="sidebar-order">{{ 'customer.account.order_history' | trans }}</a>
        </li>
        <li class="menu__item {{macros.isActive('newsletter', data.activePage)}}">
            <a href="{{ path('customer/newsletter') }}" data-id="sidebar-newsletter">{{ 'customer.account.newsletter' | trans }}</a>
        </li>
        <li class="menu__item {{macros.isActive('wishlist', data.activePage)}}">
            <a href="{{ path('wishlist/overview') }}" data-id="sidebar-wishlist">{{ 'wishlist.wishlist' | trans }}</a>
            {% block wishlistNavigation %}{% endblock %}
        </li>
        <li class="menu__item {{macros.isActive('companyUserInvitation', data.activePage)}}">
            <a href="{{ path('company-user-invitation/overview') }}" data-id="sidebar-wishlist">{{ 'company.user.invitation' | trans }}</a>
        </li>
    </ul>
{% endblock %}
