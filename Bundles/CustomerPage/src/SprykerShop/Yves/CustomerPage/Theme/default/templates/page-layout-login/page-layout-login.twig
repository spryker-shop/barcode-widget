{% extends template('page-layout-main') %}

{% define data = {
    forms: {
        register: _view.registerForm,
        login: _view.loginForm
    }
} %}

{% block pageInfo %}{% endblock %}

{% block content %}
    <div class="grid">
        <div class="col col--sm-12 col--lg-6">
            {% include molecule('form') with {
                class: 'box',
                data: {
                    title: 'customer.registration.title' | trans,
                    form: data.forms.register,
                    options: {
                        action: url('register')
                    },
                    submit: {
                        enable: true,
                        text: 'forms.submit.register' | trans
                    }
                }
            } only %}
        </div>

        <div class="col col--sm-12 col--lg-6">
            {% embed molecule('form') with {
                class: 'box',
                data: {
                    title: 'customer.login.title' | trans,
                    form: data.forms.login,
                    layout: {
                        email: 'col col--sm-6',
                        password: 'col col--sm-6'
                    },
                    submit: {
                        enable: true,
                        text: 'forms.submit.login' | trans
                    },
                    cancel: {
                        enable: true
                    }
                }
            } only %}
                {% block cancel %}
                    <a href="{{ url('password/forgotten') }}">
                        {{ 'forms.forgot-password' | trans }}
                    </a>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock %}
