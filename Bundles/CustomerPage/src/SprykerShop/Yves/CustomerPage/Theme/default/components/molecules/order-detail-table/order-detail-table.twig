{% extends model('component') %}

{% define config = {
    name: 'order-detail-table',
    tag: 'div'
} %}

{% define data = {
    items: required,
    currencyIsoCode: required
} %}

{% block body %}
    <table class="table table--expand">
        <thead>
            <tr>
                {% block headerRow %}
                    <th>{{ 'customer.order.item_sku' | trans }}</th>
                    <th>{{ 'customer.order.product_name' | trans }}</th>
                    <th>{{ 'customer.order.item_price' | trans }}</th>
                    <th>{{ 'customer.order.item_quantity' | trans }}</th>
                    <th>{{ 'customer.order.item_sum' | trans }}</th>
                {% endblock %}
            </tr>
        </thead>
        <tbody>
                {% for item in data.items %}
                    {% set isBundle = item.bundleItems is defined %}

                    <tr>
                        {% block row %}
                            <td>
                                {{ item.sku }}
                            </td>
                            <td>
                                {{ item.name }}
                            </td>
                            <td>
                                {{ item.unitPrice | money(true, data.currencyIsoCode) }}
                            </td>
                            <td>
                                {{ item.quantity }}
                            </td>
                            <td>
                                {{ item.unitPriceToPayAggregation | money(true, data.currencyIsoCode) }}
                            </td>
                        {% endblock %}
                    </tr>

                    {% if isBundle %}
                        <tr>
                            {% block bundleDetailRow %}
                                <td colspan="5">
                                    {{ "customer.order.bundled_items" | trans }} <br />
                                    {% for bundledItem in item.bundleItems %}
                                        - {{ bundledItem.quantity }} x {{ bundledItem.name }} <br />
                                    {% endfor %}

                                    {% if item.bundleProduct.productOptions is not empty %}
                                        {{ "customer.order.options" | trans }} <br />
                                        {% for productOption in item.bundleProduct.productOptions %}
                                            &nbsp; - {{ productOption.value | trans }} {{ productOption.unitPrice | money(true, data.currencyIsoCode) }}  <br />
                                        {% endfor %}
                                    {% endif %}
                                </td>
                            {% endblock %}
                        </tr>
                    {% else %}
                        {% if item.productOptions is not empty %}
                            {% for productOption in item.productOptions %}
                                <tr>
                                    {% block detailRow %}
                                        <td>
                                            &nbsp; + <small>{{ productOption.sku }}</small>
                                        </td>
                                        <td>
                                            <small>{{ productOption.value | trans }}</small>
                                        </td>
                                        <td>
                                            <small>{{ productOption.unitPrice | money(true, data.currencyIsoCode) }}</small>
                                        </td>
                                        <td colspan="2"></td>
                                    {% endblock %}
                                </tr>
                            {% endfor %}
                        {% endif %}
                    {% endif %}
                {% endfor %}
        </tbody>
    </table>
{% endblock %}
