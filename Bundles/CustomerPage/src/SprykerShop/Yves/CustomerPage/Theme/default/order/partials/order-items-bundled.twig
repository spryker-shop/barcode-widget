<tr>
    <td class="text-left">
        {{ widgetBlock('CustomerReorderWidgetPlugin', 'form_checkbox', _view.order, orderItem) }}
        {{ orderItem.bundleProduct.sku }}
    </td>
    <td class="text-left">
        {{ orderItem.bundleProduct.name }}
    </td>
    <td class="text-right">
        {{ orderItem.bundleProduct.unitPrice | money(true, _view.order.currencyIsoCode) }}
    </td>
    <td class="text-right">
        {{ orderItem.bundleProduct.quantity }}
    </td>
    <td class="text-right">
        {{ orderItem.bundleProduct.unitPriceToPayAggregation | money(true, _view.order.currencyIsoCode) }}
    </td>
</tr>

<tr style="background-color:unset;">
    <td colspan="5">
        {{ "customer.order.bundled_items" | trans }} <br />
        {% for bundledItem in orderItem.bundleItems %}
            - {{ bundledItem.quantity }} x {{ bundledItem.name }} <br />
        {% endfor %}

        {% if orderItem.bundleProduct.productOptions|length > 0 %}
            {{ "customer.order.options" | trans }} <br />
            {% for productOption in orderItem.bundleProduct.productOptions %}
                &nbsp; - {{ productOption.value | trans }} {{ productOption.unitPrice | money(true, _view.order.currencyIsoCode) }}  <br />
            {% endfor %}
        {% endif %}

    </td>
</tr>
