{% extends template('page-layout-customer', 'CustomerPage') %}

{% define data = {
    order: _view.order,
    shipmentGroups: _view.shipmentGroups,

    title: 'customer.account.order_history' | trans,
    activePage: 'order'
} %}

{% block customerContent %}
    {{ widgetBlock('CustomerReorderWidgetPlugin', 'formStart', data.order) }}

    <div class="box">
        <a href="{{ url('customer/order') }}" class="link float-right">{{ 'general.back.button' | trans }}</a>
        <h5>{{ 'customer.profile.order_details' | trans }}</h5>
        <hr/>
        <ul>
            <li>
                {{ 'customer.order.order_id' | trans }}:
                <strong>{{ _view.order.orderReference }}</strong>
            </li>
            <li>
                {{ 'customer.order.date' | trans }}:
                <strong>{{ _view.order.createdAt | formatDateTime }}</strong>
            </li>
        </ul>
        <hr/>
        {% embed molecule('order-detail-table', 'CustomerPage') with {
            data: {
                shipmentGroups: data.shipmentGroups,
                currencyIsoCode: data.order.currencyIsoCode,
                order: data.order
            }
        } only %}
            {% block headerRow %}
                <td></td>
                {{ parent() }}
            {% endblock %}
            {% block bundleDetailRow %}
                <td></td>
                {{ parent() }}
            {% endblock %}
            {% block detailRow %}
                <td></td>
                {{ parent() }}
            {% endblock %}
        {% endembed %}
        <div class="box">
            <h4>{{ 'customer.order.payment' | trans }}</h4>
            <hr/>
            <h5>{{ 'customer.order.billing_address' | trans }}</h5>
            <hr/>
            {% include molecule('display-address') with {
                data: {
                    address: data.order.billingAddress
                }
            } only %}

            <hr/>
            {% include molecule('order-summary', 'CustomerPage') with {
                class: 'text-right',
                data: {
                    order: data.order
                }
            } only %}
        </div>
    </div>

    {% if widgetExists('CartNoteOrderNoteWidgetPlugin') %}
        {% if data.order.cartNote is not empty %}
            <div class="box">
                {{ widget('CartNoteOrderNoteWidgetPlugin', data.order) }} {# @deprecated Use molecule('note-list', 'CartNoteWidget') instead. #}
            </div>
        {% endif %}
    {% elseif data.order.cartNote is not empty %}
        <div class="box">
            {% include molecule('note-list', 'CartNoteWidget') ignore missing with {
                data: {
                    label: 'cart_note.customer_page.order_note',
                    note: data.order.cartNote
                }
            } only %}
        </div>
    {% endif %}

    {{ widgetBlock('CustomerReorderWidgetPlugin', 'formActions', data.order) }}
    {{ widgetBlock('CustomerReorderWidgetPlugin', 'formEnd', data.order) }}
{% endblock %}
