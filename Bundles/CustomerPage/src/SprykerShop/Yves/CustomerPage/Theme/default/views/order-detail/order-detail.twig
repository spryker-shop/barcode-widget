{% extends template('page-layout-customer', 'CustomerPage') %}

{% define data = {
    order: _view.order,
    orderItems: _view.items,

    title: 'customer.account.order_history' | trans,
    activePage: 'order'
} %}

{% block customerContent %}
    {% widget 'CustomerReorderWidget' args [data.order] use view('customer-reorder-formStart', 'CustomerReorderWidget') only %}
    {% nowidget %}
        {{ widgetBlock('CustomerReorderWidgetPlugin', 'formStart', data.order) }} {# @deprecated Use CustomerReorderWidget instead. #}
    {% endwidget %}

    <div class="box">
        <a href="{{url('customer/order')}}" class="link float-right">{{ 'general.back.button' | trans }}</a>
        <h5>{{ 'customer.profile.order_details' | trans }}</h5>
        <hr />
        <ul>
            <li>
                {{ 'customer.order.order_id' | trans }}:
                <strong>{{ _view.order.orderReference }}</strong>
            </li>
            <li>
                {{ 'customer.order.date' | trans }}:
                <strong>{{ _view.order.createdAt | formatDateTime }}</strong>
            </li>
        </ul>
        <hr />
        {% embed molecule('order-detail-table', 'CustomerPage') with {
            data: {
                items: data.orderItems,
                currencyIsoCode: data.order.currencyIsoCode
            },
            embed: {
                order: data.order
            }
        } only %}
            {% block headerRow %}
                <td></td>
                {{parent()}}
            {% endblock %}
            {% block bundleDetailRow %}
                <td></td>
                {{parent()}}
            {% endblock %}
            {% block detailRow %}
                <td></td>
                {{parent()}}
            {% endblock %}

            {% block row %}
                <td>
                    {% widget 'CustomerReorderWidget' args [embed.order, concreteItem] use view('customer-reorder-formCheckbox', 'CustomerReorderWidget') only %}
                    {% nowidget %}
                        {{ widgetBlock('CustomerReorderWidgetPlugin', 'formCheckbox', embed.order, concreteItem) }} {# @deprecated Use CustomerReorderWidget instead. #}
                    {% endwidget %}
                </td>
                {{parent()}}
            {% endblock %}
        {% endembed %}
        <hr />
        {% include molecule('order-summary', 'CustomerPage') with {
            class: 'text-right',
            data: {
                order: data.order
            }
        } only %}
    </div>

    <div class="box">
        <h5>{{ 'customer.order.shipping_address' | trans }}</h5>
        <hr />
        {% include molecule('display-address') with {
            data: {
                address: data.order.shippingAddress
            }
        } only %}
    </div>

    <div class="box">
        <h5>{{ 'customer.order.billing_address' | trans }}</h5>
        <hr />
        {% include molecule('display-address') with {
            data: {
                address: data.order.billingAddress
            }
        } only %}
    </div>

    {% widget 'DisplayOrderNoteWidget' args [data.order] only %}
    {% elsewidget 'CartNoteOrderNoteWidgetPlugin' args [data.order] only %} {# @deprecated Use DisplayOrderNoteWidget instead. #}
    {% endwidget %}

    {% widget 'CustomerReorderWidget' args [data.order] use view('customer-reorder-formActions', 'CustomerReorderWidget') only %}
    {% nowidget %}
        {{ widgetBlock('CustomerReorderWidgetPlugin', 'formActions', data.order) }} {# @deprecated Use CustomerReorderWidget instead. #}
    {% endwidget %}

    {% widget 'CustomerReorderWidget' args [data.order] use view('customer-reorder-formEnd', 'CustomerReorderWidget') only %}
    {% nowidget %}
        {{ widgetBlock('CustomerReorderWidgetPlugin', 'formEnd', data.order) }} {# @deprecated Use CustomerReorderWidget instead. #}
    {% endwidget %}
{% endblock %}
