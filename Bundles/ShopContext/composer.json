{
  "name": "spryker-shop/shop-context",
  "type": "library",
  "description": "ShopContext module",
  "license": "proprietary",
  "require": {
    "php": ">=7.2",
    "spryker-shop/shop-context-extension": "^0.1.0",
    "spryker/application-extension": "^1.0.1",
    "spryker/kernel": "^3.30.0"
  },
  "require-dev": {
    "spryker/code-sniffer": "*",
    "spryker/container": "*"
  },
  "suggest": {
    "spryker/container": "ADD SUGGEST DESCRIPTION"
  },
  "autoload": {
    "psr-4": {
      "SprykerShop\\": "src/SprykerShop/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml src/",
    "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml src/"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
