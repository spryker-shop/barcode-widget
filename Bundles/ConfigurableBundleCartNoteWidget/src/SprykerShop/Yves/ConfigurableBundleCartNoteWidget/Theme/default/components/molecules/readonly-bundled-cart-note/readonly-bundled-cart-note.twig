{% extends model('component') %}

{% define config = {
    name: 'readonly-bundled-cart-note',
} %}

{% define data = {
    bundle: required,
} %}

{% block body %}
    {% if data.bundle.cartNote is not empty %}
        {% block bundleCartNote %}
            <div>{{ 'configurable_bundle_cart_note.cart_note' | trans }} {{ data.bundle.cartNote }}</div>
        {% endblock %}
    {% endif %}
{% endblock %}
