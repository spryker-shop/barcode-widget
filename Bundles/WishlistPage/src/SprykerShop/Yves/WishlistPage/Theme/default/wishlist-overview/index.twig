{% extends template('page-layout-customer', 'CustomerPage') %}

{% define data = {
    title: 'customer.account.wishlist' | trans,
    activePage: 'wishlist'
} %}

{% block title %}
    <h3>{{ 'customer.account.wishlist' | trans }}</h3>
{% endblock %}

{% block customerNavigation %}
    {{ widgetGlobal('CustomerNavigationWidgetPlugin', 'wishlist') }}
{% endblock %}

{% block customerContent %}
    <div class="row xlarge-unstack">
        <div class="columns">
            <div class="callout">
                <h4>{{ 'customer.account.wishlist.overview.title' | trans }}</h4>

                {% include '@WishlistPage/wishlist-overview/_partials/wishlist-form.twig' %}

                {% include '@WishlistPage/wishlist-overview/_partials/wishlist-table.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
