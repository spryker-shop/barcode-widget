{% extends model('component') %}

{% define config = {
    name: 'quick-order-row-partial',
    tag: 'quick-order-row-partial'
} %}

{% define data = {
    product: null,
    quantityField: null,
    customQuantityFieldName: null,
    price: null,
    additionalColumns: []
} %}

{% block body %}
    <div class="grid grid--justify grid--middle">
        {% if data.additionalColumns is not empty %}
            <div class="col col--sm-6">
                {% for additionalColumn in data.additionalColumns %}
                    <div class="col col--expand spacing spacing--inner">
                        {% block additionalColumn %}
                            {% if data.product and data.product[additionalColumn.fieldName] is defined %}
                                {{ data.product[additionalColumn.fieldName] | trans }}
                            {% endif %}
                        {% endblock %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <div class="col col--sm-3 spacing spacing--inner">
            {% block quantity %}
                {% set options = {
                    required: true,
                    label: false,
                    attr: {
                        class: config.jsName ~ '__quantity',
                        min: data.product.productQuantity.quantityMin | default(),
                        max: data.product.productQuantity.quantityMax | default(),
                        step: data.product.productQuantity.quantityInterval | default(),
                        disabled: data.quantityField.vars.value is empty,
                    }
                } %}

                {% if (data.customQuantityFieldName) %}
                    {% set options = options|merge({full_name: data.customQuantityFieldName}) %}
                {% endif %}

                {{ form_widget(data.quantityField, options) }}
            {% endblock %}
        </div>

        <div class="col col--sm-3 spacing spacing--inner">
            {% block price %}
                {% include molecule('price') with {
                    data: {
                        amount: data.price is empty ? null : data.price | money
                    }
                } only %}
            {% endblock %}
        </div>
    </div>
{% endblock %}
