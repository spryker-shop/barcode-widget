{% extends molecule('color-selector', 'ProductColorGroupWidget') %}

{% define config = {
    name: 'product-item-color-selector',
    tag: 'product-item-color-selector',
} %}

{% block listDataAttributes %}
    data-product-image-src="{{ data.item.images ? data.item.images[0].externalUrlSmall }}"
    data-product-name="{{ data.item.name ? data.item.name }}"
    data-product-rating="{{ data.item.rating ? data.item.rating.averageRating }}"
    {#data-product-default-price="{{ data.item.prices['DEFAULT'] ? (data.item.prices['DEFAULT'] | money) }}"#}
    {#data-product-original-price="{{ data.item.prices['ORIGINAL'] ? (data.item.prices['ORIGINAL'] | money) }}"#}
    data-product-detail-page-url="{{ data.item.url ? data.item.url }}"
    data-product-add-to-cart-url="{{ data.item.sku ? path('cart/add', {sku: data.item.sku}) }}"
{% endblock %}
