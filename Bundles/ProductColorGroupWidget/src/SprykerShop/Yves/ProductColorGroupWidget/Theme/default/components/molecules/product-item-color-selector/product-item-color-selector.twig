{% extends molecule('color-selector', 'ProductColorGroupWidget') %}

{% define config = {
    name: 'product-item-color-selector',
    tag: 'product-item-color-selector',
} %}

{% block listDataAttributes %}
    data-product-image-src="{{ item.images ? item.images[0].externalUrlSmall }}"
    data-product-name="{{ item.name ? item.name }}"
    data-product-rating="{{ item.rating ? item.rating }}"
    data-product-default-price="{{ item.prices['DEFAULT'] ? (item.prices['DEFAULT'] | money) }}"
    data-product-original-price="{{ item.prices['ORIGINAL'] ? (item.prices['ORIGINAL'] | money) }}"
    data-product-detail-page-url="{{ item.url ? item.url }}"
    data-product-add-to-cart-url="{{ item.sku ? path('cart/add', {sku: item.sku}) }}"
{% endblock %}
