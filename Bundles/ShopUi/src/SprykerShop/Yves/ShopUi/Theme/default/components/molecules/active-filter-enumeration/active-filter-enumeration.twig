{% extends model('component') %}

{% set config = {
    name: 'active-filter-enumeration'
} | merge(config | default({})) %}

{% set data = {
    filter: data.filter,
    isMultiSelect: data.isMultiSelect | default(data.filter.config.isMultiValued | default(false))
} | merge(data | default({})) %}

{% set values = data.isMultiSelect ? data.filter.activeValue : [data.filter.activeValue] %}

{% block attributes %}{% endblock %}
{% block class %}{% endblock %}

{% block component %}
    {% for value in values %}
        {% include molecule('active-filter') with {
            class: class,
            attributes: attributes,
            data: {
                filter: data.filter,
                value: value
            }
        } only %}
    {% endfor %}
{% endblock %}
