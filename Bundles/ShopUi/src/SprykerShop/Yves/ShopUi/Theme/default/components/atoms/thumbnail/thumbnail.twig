{% extends model('component') %}

{% define config = {
    name: 'thumbnail',
    tag: 'span',
} %}

{% block attributes %}{% endblock %}

{% block body %}
    {% set additionalClass = '' %}

    {% block image %}
        <img class="{{ config.name }}__image {{ additionalClass }}" {{ component.renderAttributes(attributes) }}>
    {% endblock %}
{% endblock %}
