{% extends model('component') %}

{% set config = {
    name: 'flash-message',
    tag: 'flash-message'
} | merge(config | default({})) %}

{% set data = {
    action: data.action | default(''),
    title: data.title | default(''),
    text: data.text | default(''),
    icon: data.icon | default('')
} | merge(data | default({})) %}

{% set modifiers = [data.action] | merge(modifiers | default([])) %}

{% set iconName = data.action is empty ? 'action-default' : 'action-' ~ data.action %}
{% set iconName = data.icon is empty ? iconName : data.icon %}

{% block body %}
    <div class="{{config.name}}__message container grid grid--middle">
        {% include atom('icon') with {
            modifiers: ['bigger'],
            class: 'col col--sm-1',
            data: {
                name: iconName
            }
        } only %}

        <div class="col col--sm-10">
            {% if data.title is not empty %}
                <h6>{{data.title}}</h6>
            {% endif %}
            {{data.text}}
        </div>

        {% include atom('icon') with {
            class: 'col col--sm-1',
            data: {
                name: 'times'
            }
        } only %}
    </div>
{% endblock %}
