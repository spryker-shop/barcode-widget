{% extends model('component') %}

{% define config = {
    name: 'class-toggler',
    tag: 'class-toggler'
} %}

{% define data = {
    type: 'checkbox',
    label: ''
} %}

{% define attributes = {
    target: required,
    'class-to-toggle': required,
    'add-when-checked': false,
    checked: false
} %}

{% block attributes %}{% endblock %}

{% block body %}
    {% embed atom(embed.type) with {
        data: {
            label: data.label
        },
        attributes: attributes,
        embed: {
            selector: config.selector,
            type: data.type,
            inputClass: block('inputClass'),
            inputAttributes: block('inputAttributes')
        }
    } only %}
        {%- block inputClass -%}
            {{parent()}}
            {{embed.selector}}__trigger
            {{embed.inputClass | raw}}
        {%- endblock -%}

        {%- block inputAttributes -%}
            {{parent()}}
            {{embed.inputAttributes | raw}}
        {%- endblock -%}
    {% endembed %}

    {% block inputClass %}{% endblock %}
    {% block inputAttributes %}{% endblock %}
    {% block label %}{% endblock %}
{% endblock %}
