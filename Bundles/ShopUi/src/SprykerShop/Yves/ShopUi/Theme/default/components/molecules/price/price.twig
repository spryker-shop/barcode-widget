{% extends model('component') %}

{% set config = {
    name: 'price',
    tag: 'span'
} | merge(config | default({})) %}

{% set data = {
    amount: data.amount,
    originalAmount: data.originalAmount | default(null)
} | merge(data | default({})) %}

{% block body %}
    {% if data.originalAmount -%}
        <span class="{{config.name}}__amount {{config.name}}__amount--original">{{data.originalAmount}}</span>
    {%- endif -%}

    <span class="{{config.name}}__amount">
        {% include atom('icon') with {
            class: config.name ~ '__tag',
            data: {
                name: 'tag'
            }
        } only %}
        {{data.amount}}
    </span>
{% endblock %}

