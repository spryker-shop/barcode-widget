{% extends model('component') %}

{% set config = {
    name: 'navigation-list',
    tag: 'nav'
} | merge(config | default({})) %}

{% set data = {
    nodes: data.nodes | default([])
} | merge(data | default({})) %}

{% block body %}
    <ul class="list">
        {% for node in data.nodes %}
            {% embed atom('node') with {
                class: 'list__item',
                config: {
                    tag: 'li'
                },
                data: {
                    node: node
                }
            } only %}
                {% block url %}
                    <a href="{{ data.node.url }}">{{ data.node.title }}</a>
                {% endblock %}

                {% block externalUrl %}
                    <a href="{{ data.node.url }}" target="_blank">{{ data.node.title }}</a>
                {% endblock %}

                {% block other %}
                    {{ data.node.title }}
                {% endblock %}
            {% endembed %}
        {% endfor %}
    </ul>
{% endblock %}


