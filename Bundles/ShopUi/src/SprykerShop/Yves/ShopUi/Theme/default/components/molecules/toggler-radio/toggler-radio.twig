{% extends molecule('toggler-checkbox') %}

{% define config = {
    name: 'toggler-radio',
    tag: 'toggler-radio'
} %}

{% define data = {
    type: 'radio'
} %}

{% define attributes = {
    'name': required
} %}

{%- block attributes -%}
    group-name="{{attribute(attributes, 'name')}}"
{%- endblock -%}

{%- block inputAttributes -%}
    {{parent()}}
    name="{{attribute(attributes, 'name')}}"
{%- endblock -%}
