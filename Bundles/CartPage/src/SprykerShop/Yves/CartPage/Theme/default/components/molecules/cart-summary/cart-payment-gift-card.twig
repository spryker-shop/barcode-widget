{% for payment in data.cart.payments %}
    {% if payment.giftCard is not null %}
        <li class="list__item spacing-y">
            <div class="row">
                <div class="small-8 columns">
                    {{ 'cart.giftcard.label' | trans }}: {{ payment.giftCard.code }}
                    <small><a href="{{ path('discount/voucher/remove', {'code': payment.giftCard.code}) }}"><span class="fa fa-remove"></span> {{ 'cart.voucher.remove' | trans }}</a></small>
                </div>
                <div class="small-4 columns text-right">- {{ payment.amount | money }}</div>
            </div>
        </li>
    {% endif %}
{% endfor %}
