{% extends model('component') %}

{% define config = {
    name: 'cart-image',
    tag: 'div'
} %}

{% define data = {
    cartItem: required
} %}

{% set productImage = data.cartItem.images | first %}

{% block body %}
{% if productImage is not empty %}
    <div class="cart-item__image-container">
        <img class="cart-item__image" src="{{ productImage.externalUrlLarge }}"/>
    </div>
{% else %}
    <div class="col col--sm-3 col--lg-2 text-center">
        <small>{{ 'global.no_image_available' | trans }}</small>
    </div>
{% endif %}
{% endblock %}
