<div class="callout">
    <h5 class="subheader float-right">{{ app['cart.quantity'] }} {{ 'item' | trans }}</h5>
    <h5>{{ 'cart.your-order' | trans }}</h5>

    <ul class="no-bullet">
        <li>{{ 'cart.price.subtotal' | trans }} <span class="float-right">{{ _view.cart.totals.subtotal | money }}</span></li>

        <li><hr/></li>

        {{ widget('DiscountSummaryWidgetPlugin', _view.cart) }}

        {% if _view.cart.shipment is not null and _view.cart.shipment.method is not null %}

            <li><strong>{{ 'cart.shipping' | trans }}</strong></li>

            <li>
                {{ _view.cart.shipment.method.name }}
                <span class="float-right">{{ _view.cart.shipment.method.storeCurrencyPrice | money }}</span>
            </li>

            <li><hr/></li>
        {% endif %}

        <li>{{ 'cart.price.grand.total' | trans }} <strong class="float-right">{{ _view.cart.totals.grandTotal | money }}</strong></li>

        <li>{{ 'cart.total.tax_total' | trans }} <span class="float-right">{{ _view.cart.totals.taxTotal.amount | money }}</span></li>
    </ul>

    {% if _view.cart.items | length %}
        <p class="__padding-top">
            <a class="button expanded success __no-margin-bottom{{ _view.isQuoteValid ? '' : ' disabled' }}" href="{{ url('checkout-index') }}">
                <i class="fa fa-check"></i>{{ 'cart.checkout'|trans }}
            </a>
        </p>
    {% endif %}
</div>
