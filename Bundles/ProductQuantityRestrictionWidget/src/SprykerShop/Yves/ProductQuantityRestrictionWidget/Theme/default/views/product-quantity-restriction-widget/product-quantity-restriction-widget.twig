        data: {
            maxQuantity: data.productQuantityStorage.quantityMax,
            value: data.productQuantityStorage.quantityMin,
            minQuantity: data.productQuantityStorage.quantityMin,
            step: data.productQuantityStorage.quantityInterval,
        },
    } only %}
{% endblock %}
