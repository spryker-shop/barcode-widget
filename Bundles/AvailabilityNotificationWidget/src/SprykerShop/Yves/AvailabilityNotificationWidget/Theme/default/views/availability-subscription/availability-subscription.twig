{% extends template('widget') %}

{% define data = {
    isSubscribed: _widget.isSubscribed,
    product: _widget.product,
    subscribeForm: _widget.subscribeForm,
    unsubscribeForm: _widget.unsubscribeForm
} %}

{% block body %}
    {% if data.isSubscribed %}
        {% include molecule('form') with {
            modifiers: ['inline'],
            data: {
                form: data.unsubscribeForm,
                options: {
                    action: url('notification-availability/unsubscribe')
                },
                submit: {
                    enable: true,
                    text: 'availability_notification.do_not_notify_me' | trans
                }
            }
        } only %}
    {% else %}
        {% include molecule('form') with {
            modifiers: ['inline'],
            data: {
                form: data.subscribeForm,
                options: {
                    action: url('notification-availability/subscribe')
                },
                submit: {
                    enable: true,
                    text: 'availability_notification.notify_me' | trans
                }
            }
        } only %}
    {% endif %}
{% endblock %}
