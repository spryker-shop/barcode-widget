{% extends template('widget') %}

{% define data = {
    companyUsers: companyUsers | default([]),
    errors: errors | default([])
} %}

{% set isError = data.errors | length > 0 %}
{% set companyUsersFound = data.companyUsers | length > 0 %}

{% block body %}
    {% if isError %}
        {{ data.errors }}
    {% else %}

        {% if companyUsersFound %}
            {% include molecule('company-user-list', 'AgentQuoteRequestWidget') with {
                data: {
                    companyUsers: data.companyUsers,
                }
            } only%}

        {% else %}
            {{ 'agent.autocomplete.no_results' | trans }}
        {% endif %}
    {% endif %}

{% endblock %}
