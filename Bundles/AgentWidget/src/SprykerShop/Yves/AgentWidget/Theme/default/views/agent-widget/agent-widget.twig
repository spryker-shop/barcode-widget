{% extends template('widget') %}

{% define data = {
    isLoggedIn: _widget.isLoggedIn,
    agent: _widget.agent,
    customer: _widget.customer
} %}

{% block body %}
    {% if data.isLoggedIn %}
        {% include organism('agent-control-bar', 'AgentWidget') with {
            data: {
                agent: data.agent,
                customer: data.customer
            }
        } only %}
    {% endif %}
{% endblock %}
