{% extends template('page-layout-shopping-list', 'ShoppingListPage') %}

{% define data = {
    title: _view.shoppingList.name,
    shareShoppingListForm: _view.shareShoppingListForm,
    idShoppingList: _view.idShoppingList,
    shoppingListCollection: _view.shoppingListCollection,
    labels: {
        shareFormLabel: 'customer.account.shopping_list.share.from.share_with' | trans,
        shareFormSubmit: 'customer.account.shopping_list.share.from.share' | trans,
    }
} %}

{% block breadcrumbs %}
    {% include molecule('breadcrumb') with {
        data: {
            steps: [{
                label: 'customer.account' | trans,
            },{
                label: 'customer.account.shopping_list' | trans,
            }]
        }
    } only %}
{% endblock %}

{% block customerNavigation %}
    {{ widgetGlobal('CustomerNavigationWidgetPlugin', 'shoppingList', data.idShoppingList) }}
{% endblock %}

{% block customerContent %}
    {% include molecule('form') with {
        class: 'box',
        data: {
            title: data.labels.shareFormLabel,
            form: data.shareShoppingListForm,
            submit: {
                text: data.labels.shareFormSubmit,
                enable: true
            },
            cancel: {
                enable: true,
                url: url('shopping-list'),
                text: 'general.back.button' | trans
            }
        }
    } only %}
{% endblock %}
